<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sombras.MainPage">

    <ScrollView>
        <VerticalStackLayout Margin="20" Spacing="20">
            <Image Source="dotnet_bot.png" WidthRequest="250" HeightRequest="250">
                <Image.Shadow>
                    <Shadow Brush="Blue"
                            Offset="20,20"
                            Radius="80"
                            Opacity="0.8"/>
                </Image.Shadow>
            </Image>

            <Image Source="https://aka.ms/campus.jpg"
                   Aspect="AspectFill"
                   HeightRequest="200"
                   WidthRequest="200"
                   HorizontalOptions="Center">
                <Image.Clip>
                <EllipseGeometry Center="100,100"
                                        RadiusX="70"
                                        RadiusY="75"/>
                </Image.Clip>

                <Image.Shadow>
                    <Shadow Brush="Purple"
                            Offset="170,330"
                            Opacity="0.9"
                            Radius="80"/>
                </Image.Shadow>
            </Image>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
